<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="view_pos_details_inclusive_wizard" model="ir.ui.view">
            <field name="name">pos.details.inclusive.wizard.form</field>
            <field name="model">pos.details.inclusive.wizard</field>
            <field name="arch" type="xml">
                <form string="Sales Details">
                    <group>
                        <group>
                            <field name="start_date"/>
                        </group>
                        <group>
                            <field name="end_date"/>
                        </group>
                    </group>
                    <group>
                        <field name="show_reservations" string="Include Reservations"/>
                    </group>
                    <group>
                        <field name="pos_config_ids" mode="tree" colspan="4" nolabel="1" />
                    </group>
                    <footer>
                        <button name="generate_report" string="Print" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

</odoo>
